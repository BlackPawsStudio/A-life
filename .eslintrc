{
  "env": {
    "browser": true,
    "es2021": true
  },
  "parser": "@babel/eslint-parser",
    "parserOptions": {
        "sourceType": "module",
        "requireConfigFile": false,
        "allowImportExportEverywhere": true
    },
  "extends": [
    "eslint:recommended"
  ],
  "ignorePatterns": ["*.config.js", "node_modules/", "bundle/"],
  "rules": {
    "no-plusplus": "off",
    "no-console": "off",
    "max-len": ["warn", { "code": 200 }],
    "indent": ["warn", 2, {
      "SwitchCase": 1
    }],
    "import/prefer-default-export": "off",
    "no-param-reassign": "warn",
    "no-unused-vars": "warn",
    "no-import-assign": "warn"
  }
}